.tophead {
    position: relative;
}

.tophead text {
    padding: 20rpx 3%;
    display: inline-block;
    width: 26%;
    margin-right: 1%;
    background-color: #eee;
    font-size: 34rpx;
    border-radius: 3px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.tophead text:last-child {
    margin-right: 0;
    width: 27%;
}

.tophead text::after {
    content: "";
    border-color: #323232 transparent transparent transparent;
    border-style: solid;
    border-width: 12rpx 14rpx 0 14rpx;
    width: 0;
    height: 0;
    position: relative;
    right: -25%;
    top: 30rpx;
}

