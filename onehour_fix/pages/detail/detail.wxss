.container {
    padding-top: 24rpx;
}

.section {
    padding: 24rpx 30rpx;
    background-color: #fff;
    font-size: 28rpx;
    margin-bottom: 24rpx;
}

.order-display {
    overflow: hidden;
    color: #454545;
    font-weight: bold;
}

.pull-right {
    float: right;
}

.text-orange {
    color: orange;
}

.flex-display {
    display: flex;
    padding: 20rpx 0;
}

.flex-key {
    flex-basis: 25%;
    color: #454545;
    font-weight: bold;
}

.flex-value {
    flex-basis: 75%;
    color: grey;
}

.fix-section {
    padding-top: 40rpx;
    padding-bottom: 40rpx;
}

.fix-title {
    font-size: 36rpx;
    font-weight: bold;
    padding-bottom: 40rpx;
}

.text-grey {
    color: grey;
    font-weight: normal;
}

.fix-item {
    padding: 20rpx 0;
}

.price-padding {
    padding: 10rpx 0;
}

.tips {
    color: #ADADAD;
    font-size: 22rpx;
    padding: 10rpx 0;
    padding-left: 10rpx;
}

.none-border {
    border: none;
    padding: 14rpx 0;
}

.purchase-btn {
    width: 150rpx;
    float: right;
    font-size: 28rpx;
    color: #fff;
    border-color: transparent;
    background-color: #15afff;
    margin-right: 24rpx;
}

.cancel-btn {
    width: 220rpx;
    float: right;
    font-size: 28rpx;
    background-color: #fff;
}

.none-order {
    font-size: 36rpx;
    color: grey;
}